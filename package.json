{
  "name": "vscode-iot-dev-env",
  "displayName": "VSCode Azure IoT Dev Env",
  "description": "Azure IoT Dev Env for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "vsciot-vscode",
  "engines": {
    "vscode": "^1.18.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.iotdevproject",
    "onCommand:iotdevenv.mainMenu",
    "onCommand:iotdevenv.initializeProject",
    "onCommand:iotdevenv.azureProvision",
    "onCommand:iotdevenv.azureDeploy",
    "onCommand:iotdevenv.deviceCompile",
    "onCommand:iotdevenv.deviceUpload",
    "onCommand:iotdevenv.deviceConnectionStringConfig",
    "onCommand:iotdevenv.examples",
    "onCommand:iotdevenv.initializeFunction"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "snippets": [
      {
        "language": "cpp",
        "path": "./snippets/arduino.json"
      },
      {
        "language": "c",
        "path": "./snippets/arduino.json"
      }
    ],
    "commands": [
      {
        "command": "iotdevenv.mainMenu",
        "title": "IoT Dev Env Project"
      },
      {
        "command": "iotdevenv.initializeProject",
        "title": "Initialize Project",
        "category": "IoTDev"
      },
      {
        "command": "iotdevenv.azureProvision",
        "title": "Azure Provision",
        "category": "IoTDev"
      },
      {
        "command": "iotdevenv.azureDeploy",
        "title": "Azure Deploy",
        "category": "IoTDev"
      },
      {
        "command": "iotdevenv.deviceCompile",
        "title": "Device Compile",
        "category": "IoTDev"
      },
      {
        "command": "iotdevenv.deviceUpload",
        "title": "Device Upload",
        "category": "IoTDev"
      },
      {
        "command": "iotdevenv.deviceConnectionStringConfig",
        "title": "Config Device Connection String",
        "category": "IoTDev"
      },
      {
        "command": "iotdevenv.examples",
        "title": "Examples",
        "category": "IoTDev"
      },
      {
        "command": "iotdevenv.initializeFunction",
        "title": "Create Function",
        "category": "IoTDev"
      }
    ],
    "configuration": [
      {
        "title": "Azure Functions Configuration",
        "properties": {
          "azureFunctions.projectRuntime": {
            "scope": "resource"
          },
          "azureFunctions.projectLanguage": {
            "scope": "resource"
          },
          "azureFunctions.templateFilter": {
            "scope": "resource"
          },
          "azureFunctions.deploySubpath": {
            "scope": "resource"
          },
          "IoTDev.DevicePath": {
            "type": "string"
          },
          "IoTDev.FunctionPath": {
            "type": "string"
          },
          "IoTDev.iothubConnectionString": {
            "type": "string"
          },
          "IoTDev.iothubDeviceConnectionString": {
            "type": "string"
          },
          "IoTDev.eventHubConnectionString": {
            "type": "string"
          },
          "IoTDev.eventHubConnectionPath": {
            "type": "string"
          },
          "IoTDev.functionAppId": {
            "type": "string"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "check": "gts check",
    "clean": "gts clean",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "devDependencies": {
    "@types/fs-plus": "^3.0.0",
    "@types/lodash": "^4.14.91",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "@types/opn": "3.0.28",
    "@types/request-promise": "^4.1.39",
    "@types/unzip": "^0.1.0",
    "@types/winreg": "^1.2.30",
    "gts": "^0.5.1",
    "typescript": "^2.6.2",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "azure-arm-resource": "^3.1.0-preview",
    "azure-arm-website": "^3.0.0-preview",
    "azure-iothub": "^1.2.3",
    "eventemitter2": "^5.0.0",
    "fs-plus": "^3.0.1",
    "lodash": "^4.17.4",
    "ms-rest": "^2.3.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "unzip": "^0.1.11",
    "winreg": "^1.2.3",
    "opn": "5.1.0"
  },
  "extensionDependencies": [
    "vsciot-vscode.azure-iot-toolkit",
    "ms-azuretools.vscode-azurefunctions",
    "vsciot-vscode.vscode-arduino"
  ]
}
